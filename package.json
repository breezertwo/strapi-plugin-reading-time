{
  "name": "@breezertwo/strapi-plugin-reading-time",
  "version": "5.1.0",
  "description": "Calculate the reading time of your content",
  "exports": {
    "./package.json": "./package.json",
    "./strapi-server": {
      "types": "./dist/server/src/index.d.ts",
      "source": "./server/src/index.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "scripts": {
    "build": "strapi-plugin build",
    "watch": "strapi-plugin watch",
    "watch:link": "strapi-plugin watch:link",
    "verify": "strapi-plugin verify",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -p server/tsconfig.json --noEmit"
  },
  "dependencies": {
    "reading-time": "1.5.0",
    "lodash": "4.17.23"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "10.0.4",
    "@strapi/sdk-plugin": "^5.4.0",
    "@strapi/strapi": "^5.35.0",
    "@strapi/typescript-utils": "^5.35.0",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@strapi/sdk-plugin": "^5",
    "@strapi/strapi": "^5",
    "@strapi/utils": "^5"
  },
  "strapi": {
    "displayName": "Reading Time",
    "name": "reading-time",
    "description": "Calculate the reading time of your content",
    "kind": "plugin"
  },
  "keywords": [
    "strapi-plugin",
    "strapi",
    "plugin",
    "reading-time",
    "reading time",
    "strapi-plugin-reading-time",
    "time",
    "calculate",
    "length"
  ],
  "license": "MIT",
  "author": "breezertwo <andreas@heycare.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breezertwo/strapi-plugin-reading-time.git"
  },
  "bugs": {
    "url": "https://github.com/breezertwo/strapi-plugin-reading-time/issues"
  },
  "homepage": "https://github.com/breezertwo/strapi-plugin-reading-time",
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
